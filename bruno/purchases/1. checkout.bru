meta {
  name: 1. CHECKOUT (USER)
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/{{folder}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{sessionValue}}
}

body:json {
  {
    "productIds": ["{{productId}}"]
  }
}

script:post-response {
  if (res.body && res.body.id) {
    bru.setVar("purchaseId", res.body.id);
    console.log("Saved purchaseId: " + res.body.id);
  } else {
    console.log("No purchaseId found in response");
  }
}